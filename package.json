{
  "name": "back-end",
  "version": "0.1.0",
  "bin": {
    "back-end": "bin/back-end.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=test/e2e --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:unit && npm run test:integration",
    "cdk": "cdk",
    "list": "echo Dev Stacks: && cdk ls -c environment=dev && echo. && echo Prod Stacks: && cdk ls -c environment=prod",
    "list:dev": "cdk ls -c environment=dev",
    "list:prod": "cdk ls -c environment=prod",
    "deploy:dev": "cdk deploy --all -c environment=dev --require-approval never",
    "deploy:prod": "cdk deploy --all -c environment=prod --require-approval never",
    "synth:dev": "cdk synth -c environment=dev",
    "synth:prod": "cdk synth -c environment=prod",
    "diff:dev": "cdk diff --all -c environment=dev",
    "diff:prod": "cdk diff --all -c environment=prod",
    "destroy:dev": "cdk destroy --all -c environment=dev",
    "destroy:prod": "cdk destroy --all -c environment=prod",
    "format": "prettier --write .",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@aws-sdk/client-api-gateway": "^3.984.0",
    "@aws-sdk/client-cloudformation": "^3.984.0",
    "@aws-sdk/client-dynamodb": "^3.984.0",
    "@aws-sdk/lib-dynamodb": "^3.984.0",
    "@eslint/js": "^9.39.2",
    "@types/aws-lambda": "^8.10.160",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "aws-cdk": "2.176.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.176.0",
    "constructs": "^10.0.0"
  }
}
